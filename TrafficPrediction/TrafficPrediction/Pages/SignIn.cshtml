@page
@model IndexModel
@{

    Layout = "_Layout1";
}
@{
    ViewData["Title"] = "Sign In";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TrafficPrediction</title>
</head>
<body>
    <style>
        input {
            width: auto;
            height: 2px;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
        }
    </style>
    <br /><br />
    <div class="container p-1 my-1 border" style="width: 300px; height: auto;padding: 100px 100px 100px 100px;">


        <form action="POST">
            <p>Sign In</p>
            <hr style="width: 100%; text-align: left; margin-left: 0; color: blue">
            <label for="uname">Username:</label><br />
            <input type="text" placeholder="Enter Username" name="uname" required><br />

            <label for="psw">Password:</label><br />
            <input type="password" placeholder="Enter Password" name="psw" required>
            <br /><br />

            <button type="submit" class="btn btn-info"><b>SIGN IN</b></button>
            <br /><br />

        </form>
        <hr style="width: 100%; text-align: left; margin-left: 0; color: blue">
        <form>
        <p>New User</p>
        <button type="submit" asp-page="/SignUp" class="btn btn-info"><b>SIGN UP</b></button><br />
            </form>
    </div>

</body>
</html>